

<%= form_for(@portfolio_item) do |form| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_area :subtitle, class: 'form-control'  %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', rows: 13 %>
    </div>
  </div>

<hr>

  <div class="col-md-12">
    <h4>Technologies Used: </h4>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
      <div class="form-group">
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name %>
      </div>
       <% end %>
    </div>

    <div class="form-group">
      <%= form.submit "Submit", class: "btn btn-success btn-block" %>
    </div>
  </div>

</div>






<% end %>